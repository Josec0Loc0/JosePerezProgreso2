
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Progreso2JosePerez.JpViews.JpSegundaPagina"
             Title="JpSegundaPagina">
    <Grid RowDefinitions="*, *" ColumnDefinitions="*, *" Padding="0">

        <Label Grid.Row="0" Grid.Column="0" Text="Jose" 
           FontSize="24" HorizontalOptions="Fill" VerticalOptions="Fill" 
           HorizontalTextAlignment="Center" VerticalTextAlignment="Center"   />
        <Label Grid.Row="0" Grid.Column="1" Text="Ernesto" 
           FontSize="24" HorizontalOptions="Fill" VerticalOptions="Fill" 
           HorizontalTextAlignment="Center" VerticalTextAlignment="Center"  />

        <Label Grid.Row="1" Grid.Column="0" Text="Perez" 
           FontSize="24" HorizontalOptions="Fill" VerticalOptions="Fill" 
           HorizontalTextAlignment="Center" VerticalTextAlignment="Center" Background="Beige"
           Style="{StaticResource ApellidoStyle}" />
        <Label Grid.Row="1" Grid.Column="1" Text="Tapia" 
           FontSize="24" HorizontalOptions="Fill" VerticalOptions="Fill" 
           HorizontalTextAlignment="Center" VerticalTextAlignment="Center" Background="Beige"
           Style="{StaticResource ApellidoStyle}" />
    </Grid>

</ContentPage>